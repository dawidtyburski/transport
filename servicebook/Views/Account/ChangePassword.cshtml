@model transport.Models.ChangePasswordModel

<div class="container col-3 p-2 my-2 bg-white text-black text-left">
    <h5 class="p-2">Change Password</h5>
    <form method="post">
        <div class="form-group input-group-sm mt-2">
            <h6><label class="badge bg-dark" asp-for="Password"></label></h6>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group input-group-sm mt-2">
            <h6><label class="badge bg-dark" asp-for="ConfirmPassword"></label></h6>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="mt-2">
            <button type="submit" class="btn-success btn-sm">Submit</button>
        </div>
            
    </form>


</div>