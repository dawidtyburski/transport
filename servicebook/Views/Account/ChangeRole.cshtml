@model transport.Models.ChangeRoleModel

<div class="container col-3 p-2 my-2 bg-white text-black text-left">
    <h5 class="p-2">Change Role</h5>

    <form method="post">
        <div>@Model.ChangeRoleId</div>
        <div>@Model.FullName (@Model.Email)</div>
        <div>@Model.ActualRole</div>
        <div class="form-group input-group-sm pt-2">
                        <h6><label class="badge bg-warning" asp-for="Role"></label></h6>
                        <select class="form-control" asp-for="Role"
                            asp-items="@(new SelectList(Model.Roles))">
                        </select>
                    </div>      
        <div class="mt-2">
            <button type="submit" class="btn-success btn-sm">Submit</button>
        </div>
    </form>


</div>