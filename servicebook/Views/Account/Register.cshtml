@model transport.Models.RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="container col-3 p-2 my-2 bg-white text-black text-left">
    <h5 class="p-2">Register</h5>
        <form method="post">
        @if (TempData["RegisterSuccess"] != null)
        {
            <div class="text-success">
                @TempData["RegisterSuccess"]               
            </div>
            <div class="text-success">
                You can log in <button type="button" onclick="window.location= '@Url.Action( "login", "account")'" class="btn-success btn-sm"><i class="fa fa-sign-in" aria-hidden="true"></i> Log in</button>
            </div>
        }
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group input-group-sm ">
            <h6><label class="badge bg-dark" asp-for="Email"></label></h6>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

        <div class="form-group input-group-sm mt-2">
            <h6><label class="badge bg-dark" asp-for="Password"></label></h6>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

        <div class="form-group input-group-sm mt-2">
            <h6><label class="badge bg-dark" asp-for="ConfirmPassword"></label></h6>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        <div class="form-group input-group-sm mt-2">
            <h6><label class="badge bg-dark" asp-for="FirstName"></label></h6>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        <div class="form-group input-group-sm mt-2">
             <h6><label class="badge bg-dark" asp-for="LastName"></label></h6>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        <div class="form-group input-group-sm pb-2 mt-2">
            <h6><label class="badge bg-dark" asp-for="PhoneNumber"></label></h6>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        <dnt-captcha asp-captcha-generator-max="30"
                     asp-captcha-generator-min="1"
                     asp-captcha-generator-language="English"
                     asp-captcha-generator-display-mode="NumberToWord"
                     asp-use-relative-urls="true"
                     asp-placeholder="Security code as a number"
                     asp-validation-error-message="Please enter the security code as a number."
                     asp-font-name="Tahoma"
                     asp-font-size="30"
                     asp-fore-color="#333333"
                     asp-back-color="#E5B023"
                     asp-text-box-class="form-control"
                     asp-text-box-template="<div class='input-group input-group-sm'><span class='input-group-text'><span class='fa fa-lock' aria-hidden='true'></span></span>{0}</div>"
                     asp-validation-message-class="text-danger"
                     asp-refresh-button-class="fa fa-refresh btn-sm"
                     asp-show-refresh-button="false"
                     asp-dir="ltr" />
            <button type="submit" class="btn-success btn-sm">Register</button>
        </form>

   
</div>
