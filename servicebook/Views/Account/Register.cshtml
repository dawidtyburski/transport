@model transport.Models.RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="container col-3 p-2 my-2 bg-white text-black text-left">
    <h5 class="p-2">Register</h5>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group input-group-sm ">
            <h6><label class="badge bg-dark" asp-for="Email"></label></h6>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

        <div class="form-group input-group-sm mt-2">
            <h6><label class="badge bg-dark" asp-for="Password"></label></h6>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

        <div class="form-group input-group-sm mt-2">
            <h6><label class="badge bg-dark" asp-for="ConfirmPassword"></label></h6>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        <div class="form-group input-group-sm mt-2">
            <h6><label class="badge bg-dark" asp-for="FirstName"></label></h6>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        <div class="form-group input-group-sm mt-2">
             <h6><label class="badge bg-dark" asp-for="LastName"></label></h6>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        <div class="form-group input-group-sm pb-2 mt-2">
            <h6><label class="badge bg-dark" asp-for="PhoneNumber"></label></h6>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <button type="submit" class="btn-success btn-sm">Register</button>
        </form>

   
</div>
